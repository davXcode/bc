<html lang="en">
<head>
    <title>Project Saya</title>
    <link rel="shortcut icon" href="/public/assets/logo.png">
    <link rel="stylesheet" href="/public/style.css"/>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<body>
    <!-- Nav Bar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-navbar">
        <div class="container">
          <a class="navbar-brand me-5" href="#"><img src="/public/assets/logo.png" /></a>
  
          <button
            class="navbar-toggler"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent"
            aria-expanded="false"
            aria-label="Toggle navigation"
          >
            <span class="navbar-toggler-icon"></span>
          </button>
  
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/">Home</a>
              </li>
              <li class="nav-item">
                <a
                  class="nav-link active text-orange"
                  aria-current="page"
                  href="/my-project"
                  >Add My Project</a
                >
              </li>
            </ul>
            {{#if isLogin}}
            <ul class='navbar-nav ms-auto mb-2 mb-lg-0'>
                <li class='nav-item'>
                <a class='nav-link active'
                >{{user.name}},</a>
                </li>
                <li class='nav-item'>
                <a
                    class='nav-link active'
                    aria-current='page'
                    href='/logout'
                >Logout</a>
                </li>
            </ul>
            {{else}}
            <ul class='navbar-nav ms-auto mb-2 mb-lg-0'>
                <li class='nav-item'>
                <a
                    class='nav-link active'
                    aria-current='page'
                    href='/register'
                >Register</a>
                </li>
                <li class='nav-item'>
                <a
                    class='nav-link active'
                    aria-current='page'
                    href='/login'
                >Login</a>
                </li>
            </ul>
            {{/if}}
  
            <a href="/contact" class="btn btn-dark text-white">Contact Me</a>
          </div>
        </div>
    </nav>

    <!-- END of Nav Bar -->
    <!-- Form Add My-Project -->
    <div class=" container-form-blog d-flex align-items-center justify-content-center my-project">

      <div class="project-form">
          <div class="form-container">
              <form action='/update-project/{{project.id}}' method="POST" enctype="multipart/form-data">
                <h1>Edit Project</h1>
                <div>
                  <label for='input-title' class='form-label'>Project Name</label>
                  <input
                    type='text'
                    class='form-control'
                    id='input-title'
                    name='projectname'
                    value="{{project.projectname}}"
                  />
                </div>
                <div class="date" >
                    <div class="start-date">
                        <label for="input-start-date">Start Date</label>
                        <input type="date" id="input-start-date" value="{{project.startdate}}" name="startdate"/>
                    </div>
                    <div class="end-date">
                        <label for="input-end-date">End Date</label>
                        <input type="date" id="input-end-date" value="{{project.enddate}}" name="enddate"/>
                    </div>
                </div>
                <div>
                    <label for="input-description">Description</label>
                    <textarea
                      id='input-content'
                      rows='6'
                      name='description'
                    >{{project.description}}</textarea>
                </div>
                <h5>Technologies</h5>
                    <div class="technologies">
                        <div class="technologies-left">
                            <input class="checkbox" type="checkbox" id="nodejs" {{project.nodejs}} name="nodejs" value="true">
                            <label class="text-technologies" for="nodejs">Node Js</label>
                            <input class="checkbox1" type="checkbox" id="nextjs" {{project.nextjs}} name="nextjs" value="true">
                            <label class="text-technologies" for="nextjs">Next Js</label>
                        </div>
                        <br>
                        <div class="technologies-right">
                            <input class="checkbox" type="checkbox" id="reactjs" {{project.reactjs}} name="reactjs" value="true">
                            <label class="text-technologies" for="reactjs">React Js</label>
                            <input class="checkbox2" type="checkbox" id="typescript" {{project.typescript}} name="typescript" value="true">
                            <label class="text-technologies" for="typescript">TypeScript</label>
                        </div>
                    </div>
                    <h5>Upload Image</h5>
                    <div class="showimage">
                       <input type="image" src={{project.image}} alt="Submit"  style="float:left, display:block" width="10px" height="250px">
                    </div>
                <div>
                    <div class="input-project-image-group">
                        <label for="input-project-image">
                        <p>choose</p>
                        <img class="clip" src="/public/assets/file.png" alt="file" />
                        </label>
                        <input type="file" id="input-project-image" name='image' hidden />
                    </div>
                </div>
          
                  <div class="button-group">
                    <button >submit</button>
                  </div>
              </form>
            </div>
        </div>
    </div>

    {{!-- <script src="projectlist.js"></script> --}}
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous">
    </script>
</body>
</html>