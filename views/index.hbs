                </div>

            </div>
            
        </div>
        <!-- End Main Content -->
        <!-- Project disini -->
        <div class="project-container">
          <h1> My Project</h1>
            
            <div class="main-content">
                <div id="contents" class="project-content">
                    {{#each projects}}
                        <div class="project-post">
                            <div class="project-image">
                                <img src={{this.image}} alt="img">
                            </div>
                            <div class="project-header">
                                <h4>
                                    <a href="/project-detail/{{this.id}}" target="_blank">{{this.projectname}}</a>
                                </h4>
                                <span>durasi : {{this.time}} |
                                        {{#if this.author.name}}
                                        {{this.author.name}}
                                        {{else}}
                                        ‚ùå üë®üèª
                                        {{/if}}
                                </span>
                            </div>
                            <p>
                                {{this.description}}
                            </p>

                            {{!-- icon --}}
                            <div class="project-content-logo">
                                {{#if this.reactjs}}
                                <img src="https://img.icons8.com/ios-glyphs/30/000000/react.png"/>
                                {{/if}}
                                {{#if this.nodejs}}
                                <img src="https://img.icons8.com/windows/30/000000/node-js.png"/>
                                {{/if}}
                                {{#if this.nextjs}}
                                <img src="/public/assets/nextjs.png"/>
                                {{/if}}
                                {{#if this.typescript}}
                                <img src="/public/assets/socketio.png"/>
                                {{/if}}
                            </div>
                            {{#if isLogin}}
